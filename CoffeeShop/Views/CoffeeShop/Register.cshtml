@model UserInfo
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form action="CoffeeShop/CoffeeList" method="post">
    <div class="form-group">
        <label asp-for="UserName">Please enter your name:</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Please enter your password:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VerifyPass">Please verify your password:</label>
        <input asp-for="VerifyPass" class="form-control" />
    </div>
    <div><button class="btn-lg" formmethod="post" asp-controller="CoffeeShop" asp-action="ProductList"></button></div>
</form>